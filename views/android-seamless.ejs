<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Install Certificate - Android</title>
    <link rel="stylesheet" href="/style.css">
    <style>
        .auto-download {
            background: linear-gradient(135deg, #4CAF50, #45a049);
            color: white;
            padding: 15px 25px;
            border: none;
            border-radius: 8px;
            font-size: 18px;
            cursor: pointer;
            width: 100%;
            margin: 20px 0;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }

        .download-progress {
            background-color: #f0f0f0;
            border-radius: 10px;
            padding: 20px;
            margin: 20px 0;
            text-align: center;
        }

        .spinner {
            border: 4px solid #f3f3f3;
            border-top: 4px solid #3498db;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 0 auto 15px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .android-steps {
            background: linear-gradient(135deg, #81C784, #66BB6A);
            color: white;
            padding: 20px;
            border-radius: 12px;
            margin: 20px 0;
        }

        .android-steps h3 {
            margin-top: 0;
            display: flex;
            align-items: center;
        }

        .android-steps h3::before {
            content: "ü§ñ";
            margin-right: 10px;
            font-size: 24px;
        }

        .step-list {
            list-style: none;
            padding: 0;
        }

        .step-list li {
            padding: 10px 0;
            border-bottom: 1px solid rgba(255,255,255,0.2);
            display: flex;
            align-items: center;
        }

        .step-list li:last-child {
            border-bottom: none;
        }

        .step-list li::before {
            content: "‚úì";
            background: rgba(255,255,255,0.2);
            border-radius: 50%;
            width: 25px;
            height: 25px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            font-weight: bold;
        }

        .quick-settings {
            background: #FFF3E0;
            border: 2px solid #FF9800;
            border-radius: 8px;
            padding: 15px;
            margin: 15px 0;
        }

        .quick-settings a {
            background: #FF9800;
            color: white;
            padding: 8px 15px;
            text-decoration: none;
            border-radius: 5px;
            display: inline-block;
            margin: 5px 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="logo">
                <span class="logo-icon">üîí</span>
                <h1>University of Namibia</h1>
                <p>Network Security Certificate Installation</p>
            </div>
        </div>

        <div class="content">
            <h2>üì± Android Certificate Installation</h2>
            <p>Your certificate is being prepared for seamless installation on your Android device.</p>

            <!-- Auto-download section -->
            <div class="download-progress" id="download-section">
                <div class="spinner" id="spinner"></div>
                <h3>Preparing Certificate Download...</h3>
                <p id="download-status">Starting automatic download...</p>
            </div>

            <!-- Manual download button (fallback) -->
            <button class="auto-download" id="manual-download-btn" style="display: none;" onclick="downloadCertificate()">
                üì• Download Certificate Now
            </button>

            <!-- Installation steps -->
            <div class="android-steps">
                <h3>Installation Steps</h3>
                <ol class="step-list">
                    <% instructions.steps.forEach(step => { %>
                        <li><%= step %></li>
                    <% }) %>
                </ol>
            </div>

            <!-- Quick settings links -->
            <div class="quick-settings">
                <h4>üîß Quick Settings Access</h4>
                <p>If you need to access Android settings quickly:</p>
                <a href="<%= instructions.settingsUrl %>" onclick="trackAction('settings_opened')">Open Security Settings</a>
                <a href="<%= instructions.wifiSettingsUrl %>" onclick="trackAction('wifi_settings_opened')">Open WiFi Settings</a>
            </div>

            <!-- Success section -->
            <div id="success-section" style="display: none;">
                <div class="success-message">
                    <h3>‚úÖ Certificate Downloaded Successfully!</h3>
                    <p>The certificate has been downloaded to your device. Please follow the installation steps above.</p>

                    <div class="action-buttons">
                        <button onclick="markInstalled()" class="btn btn-success">
                            ‚úì I've Installed the Certificate
                        </button>
                        <button onclick="downloadAgain()" class="btn btn-secondary">
                            üîÑ Download Again
                        </button>
                    </div>
                </div>
            </div>

            <!-- Help section -->
            <div class="help-section">
                <h4>‚ùì Need Help?</h4>
                <p>If the automatic download doesn't work:</p>
                <ul>
                    <li>Make sure you allow downloads from this site</li>
                    <li>Check your Downloads folder or notification bar</li>
                    <li>Try using a different browser (Chrome, Firefox)</li>
                    <li>Contact IT support if you continue having issues</li>
                </ul>
            </div>
        </div>

        <div class="footer">
            <p>&copy; 2024 University of Namibia. All rights reserved.</p>
        </div>
    </div>

    <script>
        let downloadAttempted = false;

        // Auto-start download when page loads
        window.onload = function() {
            setTimeout(startDownload, 2000);
        };

        function startDownload() {
            const status = document.getElementById('download-status');
            status.textContent = 'Initiating certificate download...';

            // Create hidden link and trigger download
            const link = document.createElement('a');
            link.href = '<%= certificateUrl %>';
            link.download = 'Fortinet_CA_SSL.cer';
            link.style.display = 'none';
            document.body.appendChild(link);

            try {
                link.click();
                downloadAttempted = true;

                setTimeout(() => {
                    document.getElementById('spinner').style.display = 'none';
                    status.innerHTML = '<strong>‚úÖ Download Started!</strong><br>Check your Downloads folder or notification bar.';
                    document.getElementById('success-section').style.display = 'block';
                    trackAction('auto_download_triggered');
                }, 1500);

                // Show manual button as fallback after some time
                setTimeout(() => {
                    document.getElementById('manual-download-btn').style.display = 'block';
                    status.innerHTML += '<br><em>If download didn\'t start, use the button below.</em>';
                }, 5000);

            } catch (error) {
                console.error('Auto-download failed:', error);
                showManualDownload();
            }

            document.body.removeChild(link);
        }

        function downloadCertificate() {
            window.location.href = '<%= certificateUrl %>';
            document.getElementById('success-section').style.display = 'block';
            trackAction('manual_download_clicked');
        }

        function showManualDownload() {
            document.getElementById('spinner').style.display = 'none';
            document.getElementById('download-status').innerHTML = '‚ö†Ô∏è Automatic download failed.<br>Please use the button below to download manually.';
            document.getElementById('manual-download-btn').style.display = 'block';
        }

        function downloadAgain() {
            downloadCertificate();
        }

        function markInstalled() {
            // Call the installation completion endpoint
            fetch('/certificate-installed', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({})
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Great! Certificate installation confirmed. You now have secure network access.');
                    window.location.href = data.redirectUrl || '<%= companyWebsite %>';
                } else {
                    alert('Unable to confirm installation. Please try again.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Network error. Please try again.');
            });

            trackAction('installation_confirmed');
        }

        function trackAction(action) {
            // Track user actions for analytics
            fetch('/admin/track-action', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    action: action,
                    device: 'android',
                    timestamp: new Date().toISOString()
                })
            }).catch(err => console.log('Tracking failed:', err));
        }

        // Detect if download was successful
        window.addEventListener('focus', function() {
            if (downloadAttempted) {
                setTimeout(() => {
                    document.getElementById('success-section').style.display = 'block';
                }, 1000);
            }
        });
    </script>
</body>
</html>